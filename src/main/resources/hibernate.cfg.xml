<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>

    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/files_system?useSSL=false</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">2422</property>
        <property name="hibernate.connection.pool_size">1</property>
        <property name="hibernate.show_sql">true</property>

        <mapping class="com.maxisoft.rest.model.Event"/>
        <mapping class="com.maxisoft.rest.model.User"/>
        <mapping class="com.maxisoft.rest.model.File"/>

    </session-factory>
</hibernate-configuration>